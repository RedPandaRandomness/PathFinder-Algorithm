import java.awt.Point;

/**
 * 
 * 
 */
public class Node
{
    //
    private Point coor;
    private Node next; //a reference to the next item in our deck
    
    public Node() //default constructor
    {
        coor = new Point(0,0);
        next = null; // no other value 
    }
    
    public Node(int x, int y)
    {
        coor = new Point(x,y); //unknown
        next = null; // no other value 
    }
    
    public Point getcoor()
    {
        return coor;
    }
    
    public void setcoor(int x, int y)
    {
        coor.move(x,y);
    }
    
    public void setNext(Node next){
        this.next = next;
    }
    
    
    public Node getNext(){
        return next;
    }
    
    
}
